{{ form_start(form) }}
    <div class="form-group">
        <div class="col row">
            <div class="ui search" id='customerFiles'>
                <input class="prompt" type="text" placeholder="Rechercher une fiche">
                <div class="results"></div>
            </div>
            <button type="button" class="btn btn-success ml-2" id="addPhoneByCustomer">Ajouter</button>
        </div>
    </div>
    <label class="form-control-label">Numéro(s) de téléphone : <span class="text-danger">*</span></label>
    <div class="ui fluid multiple search selection dropdown" id="phones">
        {{ form_row(form.phone_number, {"value": phones ?? ''}) }}
        <i class="dropdown icon"></i>
        <div class="default text">Ex: +33635668584</div>
        <div class="menu"></div>
    </div>
    <div class="form-group">
        <small class="text-primary">Séparez les numéros de téléphone par un virgule</small>
    </div>
    {{ form_row(form.content, {"value": message ?? ''}) }}
    <button class="btn btn-success">{{ button_label|default('Envoyer') }}</button>
{{ form_end(form) }}
