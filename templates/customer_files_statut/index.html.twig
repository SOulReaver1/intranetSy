{% extends 'base.html.twig' %}

{% set title = "Les statuts" %}
{% block header %}
    <a href="{{ path('customer_files_statut_new', {'global': app.session.get('global')}) }}" class="btn btn-primary">Créer un statut</a>
{% endblock %}
{% block body %}
    <table id="table" class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Couleur</th>
                <th>Créer le</th>
                <th width=10%>actions</th>
            </tr>
        </thead>
        <tbody class="list">
        {% for customer_files_statut in customer_files_statuts %}
            <tr>
                <td class="d-none">{{ customer_files_statut.id }}</td>
                <td class="handle">{{ customer_files_statut.ordered }}</td>
                <td class="handle">{{ customer_files_statut.name }}</td>
                <td class="handle"><span class="badge" style="background-color: {{ customer_files_statut.color }}">{{ customer_files_statut.color }}</span></td>
                <td class="handle">{{ customer_files_statut.createdAt ? customer_files_statut.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('customer_files_statut_show', {'id': customer_files_statut.id, 'global': app.session.get('global')}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('customer_files_statut_edit', {'id': customer_files_statut.id, 'global': app.session.get('global')}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('table-dragger') }}
{% endblock %}