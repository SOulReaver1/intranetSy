{% extends 'base.html.twig' %}

{% set title = client_statut_document.name %}
{% block header %}
    <a href="{{ path('client_statut_document_index') }}" class="btn btn-primary">Retour</a>
{% endblock %}
{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th># :</th>
                <td>{{ client_statut_document.id }}</td>
            </tr>
            <tr>
                <th>Nom :</th>
                <td>{{ client_statut_document.name }}</td>
            </tr>
            <tr>
                <th>Statut(s) client :</th>
                <td>{{ client_statut_document.clientStatut ? client_statut_document.clientStatut|join(', ') : 'Le document n\'a pas de statut client'}}</td>
            </tr>
            <tr>
                <th>Cr√©er le :</th>
                <td>{{ client_statut_document.createdAt ? client_statut_document.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifier le :</th>
                <td>{{ client_statut_document.updatedAt ? client_statut_document.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col mt-4">
        <div class="row">
            <a href="{{ path('client_statut_document_edit', {'id': client_statut_document.id}) }}" class="btn btn-primary">Modifier</a>
            {{ include('client_statut_document/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
