{% extends 'base.html.twig' %}

{% block title %}CustomerFiles{% endblock %}
{% set title = customer_file.Name %}
{% block header %}
    <a href="{{ path('default') }}" class="btn btn-primary">Retour</a>
{% endblock %}
{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer_file.id }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ customer_file.Sexe }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer_file.Name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ customer_file.Adresse }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ customer_file.city }}</td>
            </tr>
            <tr>
                <th>Zip_code</th>
                <td>{{ customer_file.zipCode }}</td>
            </tr>
            <tr>
                <th>Home_phone</th>
                <td>{{ customer_file.homePhone }}</td>
            </tr>
            <tr>
                <th>Cellphone</th>
                <td>{{ customer_file.cellphone }}</td>
            </tr>
            <tr>
                <th>Referent_name</th>
                <td>{{ customer_file.referentName }}</td>
            </tr>
            <tr>
                <th>Referent_phone</th>
                <td>{{ customer_file.referentPhone }}</td>
            </tr>
            <tr>
                <th>Referent_statut</th>
                <td>{{ customer_file.referentStatut }}</td>
            </tr>
            <tr>
                <th>Stairs</th>
                <td>{{ customer_file.stairs ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Mail_al</th>
                <td>{{ customer_file.mailAl }}</td>
            </tr>
            <tr>
                <th>Password_al</th>
                <td>{{ customer_file.passwordAl }}</td>
            </tr>
            <tr>
                <th>Annex_quote</th>
                <td>{{ customer_file.annexQuote ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Annex_quote_description</th>
                <td>{{ customer_file.annexQuoteDescription }}</td>
            </tr>
            <tr>
                <th>Annex_quote_commentary</th>
                <td>{{ customer_file.annexQuoteCommentary }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col mt-4">
        <div class="row">
            <a href="{{ path('customer_files_edit', {'id': customer_file.id}) }}">Modifier</a>

            {{ include('customer_files/_delete_form.html.twig') }}
        </div>
    </div>
    
{% endblock %}
