{% extends 'base.html.twig' %}

{% block title %}HelpStatut index{% endblock %}
{% set datatable = true %}
{% set title = "Les statuts demande d'aide" %}
{% block header %}
    <a href="{{ path('help_statut_new') }}" class="btn btn-primary">Ajouter un statut</a>
{% endblock %}
{% block body %}
    <table id="statutTable" class="table w-100 dt-table responsive display nowrap">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th width=5%>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for help_statut in help_statuts %}
            <tr>
                <td>{{ help_statut.id }}</td>
                <td>{{ help_statut.name }}</td>
                <td>
                    <a href="{{ path('help_statut_show', {'id': help_statut.id}) }}" class="btn btn-primary">Regarder</a>
                    <a href="{{ path('help_statut_edit', {'id': help_statut.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
