{% extends 'base.html.twig' %}

{% set title = 'Message envoyer à ' ~ sms.receiver %}
{% block header %}
    <a href="{{ path('sms_index') }}" class="btn btn-primary">Retour</a>
{% endblock %}
{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th># :</th>
                <td>{{ sms.id }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone :</th>
                <td>{{ sms.receiver }}</td>
            </tr>
            <tr>
                <th>Message :</th>
                <td>{{ sms.message }}</td>
            </tr>
            <tr>
                <th>Créer le :</th>
                <td>{{ sms.creationDatetime ? sms.creationDatetime|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Envoyer le :</th>
                <td>{{ sms.sentAt ? sms.sentAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col mt-4">
        <div class="row">
            {{ include('sms/_delete_form.html.twig') }}
        </div>
    </div>

    
{% endblock %}
