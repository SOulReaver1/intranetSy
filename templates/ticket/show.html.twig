{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}
{% set title = ticket.title %}
{% block header %}
    <div class="row justify-content-end">
        <a href="{{ path('ticket_message_index', {'id': ticket.id}) }}" class="btn btn-primary">Lire les messages</a>
        <a href="{{ path('ticket_index') }}" class="btn btn-primary">Retour</a>
    </div>
{% endblock %}
{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Titre :</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Description :</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Cr√©er le :</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col mt-4">
        <div class="row">
            <a href="{{ path('ticket_edit', {'id': ticket.id}) }}" class="btn btn-primary">Modifier</a>

            {{ include('ticket/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
