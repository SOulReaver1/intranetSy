{% extends 'base.html.twig' %}

{% block title %} Les utilisateurs {% endblock %}
{% set title = "Gérer vos utilisateurs !" %}
{% block header %}
    <a href="{{path('app_register')}}" class="btn btn-info">Ajouter un utilisateur</a>
{% endblock %}
{% block body %}

    <table id="usersTable" class="table w-100 dt-table responsive display nowrap">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Role(s)</th>
                <th width="20%">Actions</th>
            </tr>
        </thead>
        <tbody class="list">
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|join(', ') : 'L\'utilisateur n\'a pas de rôle'}}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">
                        <button class="btn btn-info">Voir</button>
                    </a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">
                        <button class="btn btn-info">Modifier</button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun résultat trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    <script>
        var tables = {};
        $('.dt-table').each(function(){
            tables[$(this).attr('id')] = $(this).DataTable({
                responsive: true,
                bInfo: false,
                bLengthChange: false,
            })
        })
    </script>
{% endblock %}
