{% endblock %}
{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th># :</th>
                <td>{{ sms_auto.id }}</td>
            </tr>
            <tr>
                <th>Etape :</th>
                <td>{{ sms_auto.step }}</td>
            </tr>
            <tr>
                <th>Message :</th>
                <td>{{ sms_auto.content }}</td>
            </tr>
            <tr>
                <th>Cr√©er le :</th>
